<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 10px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            padding: 30px;
        }
        
        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 30px;
        }
        
        .error {
            background: #ff4444;
            color: white;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        
        .forms-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }
        
        .form-container {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            border: 2px solid #e9ecef;
        }
        
        .form-container h2 {
            color: #495057;
            margin-bottom: 20px;
            font-size: 1.5em;
        }
        
        .form-group {
            margin-bottom: 15px;
        }
        
        label {
            display: block;
            margin-bottom: 5px;
            color: #495057;
            font-weight: 600;
        }
        
        input, textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            font-size: 14px;
        }
        
        textarea {
            resize: vertical;
            min-height: 80px;
        }
        
        button {
            background: #667eea;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            transition: background 0.3s;
        }
        
        button:hover {
            background: #5568d3;
        }
        
        .delete-btn {
            background: #ff4444;
            padding: 5px 10px;
            font-size: 12px;
        }
        
        .delete-btn:hover {
            background: #cc0000;
        }
        
        .clear-btn {
            background: #ff9800;
        }
        
        .clear-btn:hover {
            background: #e68900;
        }
        
        .data-section {
            margin-top: 30px;
        }
        
        .data-section h2 {
            color: #333;
            margin-bottom: 20px;
            border-bottom: 3px solid #667eea;
            padding-bottom: 10px;
        }
        
        .user-card, .message-card {
            background: #f8f9fa;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 8px;
            border-left: 4px solid #667eea;
        }
        
        .user-card strong, .message-card strong {
            color: #495057;
        }
        
        .timestamp {
            color: #6c757d;
            font-size: 12px;
            margin-top: 5px;
        }
        
        .empty-state {
            text-align: center;
            color: #6c757d;
            padding: 40px;
            font-style: italic;
        }
        
        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üöÄ <%= title %></h1>
        
        <% if (typeof error !== 'undefined') { %>
            <div class="error">‚ö†Ô∏è <%= error %></div>
        <% } %>
        
        <!-- Forms Section -->
        <div class="forms-section">
            <!-- User Registration Form -->
            <div class="form-container">
                <h2>üë§ Register User</h2>
                <form action="/register" method="POST">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="age">Age:</label>
                        <input type="number" id="age" name="age" min="1" max="120">
                    </div>
                    
                    <button type="submit">Register</button>
                </form>
            </div>
            
            <!-- Message Form -->
            <div class="form-container">
                <h2>üí¨ Post Message</h2>
                <form action="/message" method="POST">
                    <div class="form-group">
                        <label for="author">Author:</label>
                        <input type="text" id="author" name="author" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea id="message" name="message" required></textarea>
                    </div>
                    
                    <button type="submit">Post Message</button>
                </form>
            </div>
        </div>
        
        <!-- Clear All Button -->
        <div class="header-actions">
            <h2>üìä Stored Data</h2>
            <form action="/clear" method="POST" style="display: inline;">
                <button type="submit" class="clear-btn" onclick="return confirm('Clear all data?')">
                    Clear All Data
                </button>
            </form>
        </div>
        
        <!-- Users Section -->
        <div class="data-section">
            <h2>üë• Registered Users (<%= users.length %>)</h2>
            
            <% if (users.length === 0) { %>
                <div class="empty-state">No users registered yet. Be the first!</div>
            <% } else { %>
                <% users.forEach(user => { %>
                    <div class="user-card">
                        <strong>üë§ <%= user.username %></strong> - <%= user.email %>
                        <div>Age: <%= user.age %></div>
                        <div class="timestamp">Registered: <%= user.registeredAt %></div>
                        <form action="/delete-user/<%= user.id %>" method="POST" style="display: inline; margin-top: 10px;">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </div>
                <% }); %>
            <% } %>
        </div>
        
        <!-- Messages Section -->
        <div class="data-section">
            <h2>üí¨ Messages (<%= messages.length %>)</h2>
            
            <% if (messages.length === 0) { %>
                <div class="empty-state">No messages yet. Start the conversation!</div>
            <% } else { %>
                <% messages.forEach(message => { %>
                    <div class="message-card">
                        <strong><%= message.author %></strong>
                        <p><%= message.message %></p>
                        <div class="timestamp"><%= message.timestamp %></div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>